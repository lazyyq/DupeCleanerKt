<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginVertical">12dp</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="contentPaddingBottom">8dp</item>
        <item name="contentPaddingLeft">4dp</item>
        <item name="contentPaddingRight">4dp</item>
        <item name="cardElevation">4dp</item>
        <!--<item name="strokeColor">?colorPrimary</item>-->
        <!--<item name="strokeWidth">1dp</item>-->
    </style>

    <style name="MainCardTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainCardTitleSpace">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="background">?colorPrimary</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="background">?colorPrimary</item>
    </style>
</resources>